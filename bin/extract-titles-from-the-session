#!/usr/bin/env perl6

use v6;

grammar session-html {
    token manifest-class {
        '<ol class="manifest">'
            <list-item>+
        '</ol>'
    }
    
    token list-item {
        '<li>'
            [<manifest-item-title> <br>]+
        '</li>'
    }
    
    token br {
        '<br>'
    }
    
    token manifest-item-title {
        '<span class="manifest-item-title">'
            [ <anchor> | <plain-title>  ]
        '</span><!-- /.manifest-item-title -->'
    }
    
    token anchor {
        '<a href' .*? '>' <plain-title> '</a>'
    }

    token plain-title {
        \w \V+ \w
    }
}

